<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/ex3_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ex3_btn1"
        android:layout_alignBottom="@+id/ex3_btn1"
        android:layout_centerHorizontal="true"
        android:text="Btn2" />

    <Button
        android:id="@+id/ex3_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ex3_btn2"
        android:layout_alignBottom="@+id/ex3_btn2"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/ex3_btn2"
        android:text="Btn3" />

    <TextView
        android:id="@+id/ex3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex3_btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Result Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/ex3_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:layout_toLeftOf="@+id/ex3_text"
        android:text="Btn1" />

</RelativeLayout>
